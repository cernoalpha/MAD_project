<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F5F5F5"
    android:layout_height="match_parent"
    tools:context=".Taskinput">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        app:cardCornerRadius="30sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20sp"
        android:background="#FDF3E7"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtpnt"
            android:layout_width="135dp"
            android:layout_height="65dp"
            android:fontFamily="monospace"
            android:hint="0%"
            android:textAlignment="viewStart"
            android:textColor="#333333"
            android:textColorHint="#333333"
            android:textSize="40sp" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="355dp"
            android:layout_height="32dp"
            android:thumb="@drawable/custom_seekbar_thumb"
            android:progressTint="#0077B6"
            android:progressBackgroundTint="#FA0000"
            android:max="100"
            android:progress="0" />


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:backgroundTint="#A3C4BC"
            app:cardCornerRadius="10sp">

            <EditText
                android:id="@+id/title_task"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:ems="10"
                android:fontFamily="monospace"
                android:hint="Title"
                android:inputType="text"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#333333"
                android:textColorHint="#D6E3DB"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20sp"
               android:orientation="horizontal">


               <androidx.cardview.widget.CardView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:backgroundTint="#A3C4BC"
                   app:cardCornerRadius="10sp">


               <TextView
                   android:id="@+id/startdate"
                   android:layout_width="165dp"
                   android:layout_height="50dp"
                   android:padding="10sp"
                   android:fontFamily="monospace"
                   android:hint="Start date"
                   android:textColor="#333333"
                   android:textColorHint="#D6E3DB"
                   android:textSize="18sp" />
               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="20sp"
                   android:backgroundTint="#A3C4BC"
                   app:cardCornerRadius="10sp">

               <TextView
                   android:id="@+id/enddate"
                   android:layout_width="165dp"
                   android:layout_height="50dp"
                   android:padding="10sp"
                   android:fontFamily="monospace"
                   android:hint="End date"
                   android:textColor="#333333"
                   android:textColorHint="#D6E3DB"
                   android:textSize="18sp" />

               </androidx.cardview.widget.CardView>

           </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:backgroundTint="#A3C4BC"
            app:cardCornerRadius="10sp">

        <TextView
            android:id="@+id/daysleft"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:padding="15sp"
            android:fontFamily="monospace"
            android:text="Days left : "
            android:textColor="#333333"
            android:textSize="16sp" />

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:backgroundTint="#A3C4BC"
            app:cardCornerRadius="10sp">

        <TextView
            android:id="@+id/target"
            android:layout_width="wrap_content"
            android:padding="15sp"
            android:layout_height="50sp"
            android:fontFamily="monospace"
            android:text="Target :"
            android:textColor="#333333"
            android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:backgroundTint="#A3C4BC"
            app:cardCornerRadius="10sp">

        <EditText
            android:id="@+id/description"
            android:layout_width="375sp"
            android:layout_height="175sp"
            android:padding="15sp"
            android:ems="10"
            android:fontFamily="monospace"
            android:gravity="start|top"
            android:textSize="18sp"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:textColor="#333333"
            android:textColorHint="#D6E3DB" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#8DB6CD"
        android:layout_marginLeft="150sp"
        android:layout_marginTop="10sp"
        android:fontFamily="monospace"
        android:text="Save"
        android:textSize="14sp"
        android:layout_below="@+id/card"/>

</RelativeLayout>